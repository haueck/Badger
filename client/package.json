{
  "name": "Badger",
  "version": "1.0.0",
  "description": "Badger",
  "repository": {
    "type": "git",
    "url": "https://github.com/haueck/Badger.git"
  },
  "scripts": {
    "eslint": "eslint js components tests",
    "build": "webpack --mode=production",
    "compress": "gzip dist/js/*.js",
    "watch": "rm -f dist/js/*.js.gz && webpack --mode=development --watch",
    "test": "jest --no-cache"
  },
  "author": "Rafal Kozik",
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "@fortawesome/fontawesome-free": "*",
    "vue-template-compiler": "*",
    "html-webpack-plugin": "*",
    "copy-webpack-plugin": "*",
    "@babel/preset-env": "*",
    "moment-timezone": "*",
    "@vue/test-utils": "*",
    "jest-raw-loader": "*",
    "expose-loader": "*",
    "style-loader": "*",
    "vuedraggable": "*",
    "@babel/core": "*",
    "parenthesis": "*",
    "webpack-cli": "*",
    "body-parser": "*",
    "file-loader": "*",
    "underscore": "*",
    "url-loader": "*",
    "vue-router": "*",
    "raw-loader": "*",
    "css-loader": "*",
    "vue-loader": "*",
    "babel-jest": "*",
    "bootstrap": "*",
    "popper.js": "*",
    "jquery-ui": "*",
    "chart.js": ">=3.0.0-beta.3",
    "vue-jest": "*",
    "vue-cli": "*",
    "tinymce": "5.4.1",
    "natural": "*",
    "prismjs": "*",
    "webpack": "*",
    "jquery": "*",
    "eslint": "*",
    "vuex": "*",
    "jest": "*",
    "vue": "*",
    "md5": "*"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "."
    ],
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js"
    },
    "moduleFileExtensions": [
      "js",
      "vue",
      "mjs",
      "json"
    ],
    "transform": {
      "\\.m?js$": "babel-jest",
      "\\.vue$": "vue-jest",
      "\\.txt$": "jest-raw-loader"
    },
    "transformIgnorePatterns": [
      "/node_modules/.+\\.js$",
      "/node_modules/.+\\.vue$"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-invalid-regexp": "off",
      "no-var": "warn",
      "semi": [
        "warn",
        "never"
      ],
      "quotes": [
        "warn",
        "double"
      ],
      "camelcase": [
        "warn",
        {
          "properties": "always"
        }
      ],
      "object-shorthand": [
        "warn",
        "methods"
      ]
    },
    "env": {
      "browser": true,
      "jquery": true,
      "es6": true,
      "jest": true
    }
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  }
}
